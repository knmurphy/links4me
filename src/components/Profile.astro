---
// src/components/Profile.astro
export interface Props {
  title: string;
  description: string;
  profileImage: string;
}

const { title, description, profileImage } = Astro.props;
---

<div class="profile">
  <img src={profileImage} alt="Profile" class="profile-image" />
  <h1>{title}</h1>
  <p>{description}</p>
</div>

<style>
  .profile {
    text-align: center;
    margin-bottom: 20px;
  }
  .profile-image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
  }
</style>